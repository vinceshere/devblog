---
---
[
{% for post in site.posts %}
  {
    "title": "{{ post.title | escape }}",
    "url": "{{ site.baseurl }}{{ post.url }}",
    "featured_image": "{{ site.baseurl }}/assets/images/{{ post.featured_image }}",
    "category": "{{ post.category | slugify }}",
    "tags": "{{ post.tags | join: ', ' }}",
    "date": "{{ post.date }}"
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
